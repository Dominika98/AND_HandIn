<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/container_water"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#c9fd8d"
    android:layout_marginTop="3dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_water_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0L 250ml"
            style="@style/DataText"/>

        <TextView
            android:id="@+id/tv_water_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="28/03/2019"
            style="@style/DataText"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_icon_water"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/water"
        android:layout_marginRight="10dp"/>

</LinearLayout>